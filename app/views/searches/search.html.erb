
 <h2>Results</h2>

 <table class="table table-hover table-inverse">
   <!--検索対象モデルがUserの時-->
   <% if @range == "User" %>
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Introduction</th>
      </tr>
    </thead>
    <tbody>
     <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(50,50) %></td>
        <td>
          <%= link_to user_path(user.id) do %>
          <%= user.name %>
          <% end %>
        </td>
        <td><%= user.introduction %></td>
      </tr>
     <% end %>
    </tbody>
   <% else %>
   <!--検索対象モデルがBookの時-->
     <% @books.each do |book| %>
     <thead>
       <tr>
         <th></th>
         <th>Title</th>
         <th>Opinion</th>
         <th>Category</th>
       </tr>
     </thead>
     <tbody>
      <tr>
        <td>
          <%= link_to user_path(book.user.id) do %>
          <%= book.user.name %>
          <% end %>
        </td>
        <td>
         <%= link_to book_path(book.id) do %>
         <%= book.title %>
         <% end %>
        </td>
        <td><%= book.body %></td>
        <td><%= book.category %></td>
      </tr>
     <% end %>
     </tbody>
   <% end %>
 </table>
